generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  expenses  Expense[]
  tags      Tag[]
}

model Expense {
  id          Int     @id @default(autoincrement())
  amount      Float
  description String?
  createdAt   DateTime       @default(now())
  userId      Int
  user        User           @relation(fields: [userId], references: [id])
  tags        ExpenseTag[]
}

model Tag {
  id       Int     @id @default(autoincrement())
  name    String
  userId  Int
  user    User       @relation(fields: [userId], references: [id])
  expenses ExpenseTag[]

  @@unique([name, userId]) 
}

model ExpenseTag {
  expenseId Int
  tagId     Int

  expense   Expense @relation(fields: [expenseId], references: [id])
  tag       Tag     @relation(fields: [tagId], references: [id])

  @@id([expenseId, tagId]) 
}
